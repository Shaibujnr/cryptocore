<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:transitionName="@string/card_transition_string"
    card_view:cardElevation="5dp"
    card_view:cardCornerRadius="3dp"
    card_view:cardUseCompatPadding="true"
    tools:targetApi="lollipop">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">
        <com.github.siyamed.shapeimageview.CircularImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bbtc"
            android:id="@+id/item_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@id/item_image"
            android:layout_toEndOf="@id/item_image"
            android:gravity="end"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_price"
                android:transitionName="@string/price_transition_string"
                android:typeface="monospace"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:textColor="#5588ff"
                android:textSize="23sp"
                tools:targetApi="lollipop" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/item_crypto_code"
                    android:transitionName="@string/crypto_label_transition_string"
                    android:textStyle="bold"
                    android:textColor="#ff0000"
                    tools:targetApi="lollipop" />
                <TextView
                    android:layout_margin="3dp"
                    android:textStyle="bold"
                    android:id="@+id/item_spinner"
                    android:transitionName="@string/currency_code_transition_string"
                    android:layout_width="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="match_parent"
                    tools:targetApi="lollipop" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:textSize="14sp"
                android:id="@+id/item_time_stamp"
                android:transitionName="@string/updated_transition_string"
                android:typeface="monospace"
                tools:targetApi="lollipop" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_alignParentBottom="true">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_progress"
                android:visibility="gone"
                android:indeterminate="true"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_delete"
                android:src="@drawable/delete"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_refresh"
                android:transitionName="@string/refresh_transition_string"
                android:src="@drawable/update"
                tools:targetApi="lollipop" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>